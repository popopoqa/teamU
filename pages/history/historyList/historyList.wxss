page {
  background: #f2f2f2;
}
.historyList {
  position: relative;
}
.history-tab {
  z-index: 4; 
  position: fixed; 
  top:0;
  left:0; 
  width:100%; 
  height:80rpx; 
  line-height: 80rpx; 
  background: #fff; 
  display: flex; 
  padding:0 30rpx; 
  border-bottom:1px solid #f5f5f5; 
  box-sizing: border-box; 
}
.history-tab> view {
  width:49.9%;
  font-size:28rpx;
  text-align: center; 
  color:#616161;
}
.history-tab> view text { 
  padding:0 15rpx; 
  height:75rpx; 
  display:inline-block;
}
.history-tab .cur text { 
  border-bottom:5rpx solid #000000; 
  color:#000000;
}
.history-content {
  margin-top:100rpx;
  margin-bottom:200rpx;
}
.history-list-content {
  background: #ffffff;
  border-radius: 5rpx;
  /* box-shadow: darkgrey 0px 0px 4rpx 0px; */
}
.history-list-content {
  display: flex;
  margin: 0 36rpx;
  padding: 25rpx 20rpx;
  align-items: center;
  margin-bottom: 20rpx;
}
.history-left {
  flex:2;
}
.history-park-name {
  font-size: 28rpx;
  color: #646464;
}
.history-ticket-type {
  color: #a2a2a2;
  font-size:24rpx;
  margin-top: 10rpx;
} 
.history-park-time {
  color: #a2a2a2;
  font-size:26rpx;
  margin-top: 10rpx;
}
.history-right {
  background: none;
  border: none;
  font-size: 28rpx;
  color: #fff;
  background: #a2a2a2;
  padding:0 30rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  border-radius: 5rpx;
}
.history-no-ticket {
  display: flex;
  align-items: center;
  justify-content: center;
  color: #a2a2a2;
  height: 800rpx;
}


