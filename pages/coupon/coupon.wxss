page {
  background:#F8F8F8;
}
.coupon {
  background:#FFFFFF;
  margin:30rpx 30rpx 0 30rpx;
  padding:30rpx;
  border-radius:12rpx;
  display: flex;
  align-items: center;
}
.coupon .flex {
  flex:1;
}
.coupon .flex .money {
  color:#69C57A;
  padding-right:30rpx;
  margin-right:10rpx;
  display:inline-block;
}
.coupon .flex .money .view {
  font-size:32rpx;
}
.coupon .flex .money .view:nth-child(2) {
  font-size:26rpx;
  margin-top:20rpx;
}
.coupon .flex .give {
  padding-left:10rpx;
  display:inline-block;
  border-left: 1rpx solid #C4C4C4;
  margin-top:10rpx;
}
.coupon .flex .give .send:nth-child(1) {
  font-size:32rpx;
}
.coupon .flex .give .send {
  margin-top:15rpx;
  font-size:26rpx;
}
.receive {
  font-size:26rpx;
  color:#DE151D;
}
.colorful {
  color:#C2C2C2;
}
.temporary {
  position:absolute;
  color:#A8A8A8;
  font-size:30rpx;
  width:100%;
  height:100%;
  display: flex;
  align-items:center;
  justify-content: center;
} 